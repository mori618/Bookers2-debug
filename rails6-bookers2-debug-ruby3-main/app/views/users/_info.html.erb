<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th>
      <%= link_to follows_user_path(user) do %>
        <%= user.followers.count %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th>followers</th>
    <th>
      <%= link_to followers_user_path(user) do %>
        <%= user.followeds.count %>
      <% end %>
    </th>
  </tr>

  <% if current_user != user %>
    <tr>
      <% if current_user.following?(user) %>
        <th><%= link_to "Follow 外す", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-outline-danger" %></th>
      <% else %>
        <th><%= link_to "Follow", user_relationships_path(user.id), method: :post, class:"btn btn-sm btn-outline-success" %></th>
      <% end %>
    </tr>
  <% end %>
</table>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>